# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5001
FRONTEND_URL=http://localhost:5173

# MongoDB Connection
# Option 1: Local MongoDB (if installed)
# MONGODB_URI=mongodb://localhost:27017/sparsh-clinic

# Option 2: MongoDB Atlas (Free cloud database - recommended)
# Get this from: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/sparsh-clinic?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret (generate a random string)
JWT_SECRET=sparsh-clinic-local-dev-secret-key-change-in-production

# Cloudinary Configuration
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (Optional - for contact form)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@sparshprc.com
EMAIL_TO=sparshprc@gmail.com
